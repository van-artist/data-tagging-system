{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
  ],
  "plugins": ["prettier", "import"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
      },
    ],
    "import/newline-after-import": [
      "error",
      {
        "count": 1,
      },
    ],
    "no-trailing-spaces": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
      },
    ],
  },
}
